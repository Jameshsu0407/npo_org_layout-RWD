doctype html
html(lang="zh-tw")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title 全職工作
		//- 匯入連結
		include header.pug
	body#top
		//- 匯入導覽列+gototop
		include nav.pug
		.mt-135
		section.container
			.row
				.title.col-12
					h2 全職工作
				.content.col-12
					form
						.selector.flex-wrap
							.col-wrap.col-12.col-md-2
								select.selectpicker(data-size="5" data-width="100%")
									option(selected="" disabled="") 工作地點
									option 全部
									option 全球性
									option 全國性
									option 基隆市
									option 新北市
									option 台北市
									option 桃園市
									option 新竹市
									option 新竹縣
									option 苗栗縣
									option 台中市
									option 彰化縣
									option 南投縣
									option 雲林縣
									option 嘉義市
									option 嘉義縣
									option 台南市
									option 高雄市
									option 屏東縣
									option 宜蘭縣
									option 花蓮縣
									option 台東縣
									option 澎湖縣
									option 金門縣
									option 連江縣
							.col-wrap.col-12.col-md-2
								select.selectpicker(data-size="5" data-width="100%")
									option(selected="" disabled="") 職務類別
									option 全部
									option 不拘
									option 社工
									option 行政
									option 會計
									option 資訊
									option 美工
									option 其他
							.col-wrap.col-12.col-md-2
								select.selectpicker(data-size="5" data-width="100%")
									option(selected="" disabled="") 組織屬性
									option 綜合性服務
									option 兒童青少年福利
									option 婦女福利
									option 老人福利
									option 身心障礙福利
									option 家庭福利
									option 健康醫療
									option 心理衛生
									option 社區規劃(營造)
									option 環境保護
									option 國際合作交流
									option 教育與科學
									option 文化藝術
									option 人權和平
									option 消費者保護
									option 教育與科學
									option 性別平等
									option 政府單位
									option 動物保護
							.col-wrap.col-12.col-md-4
								input.form-control(type="text" placeholder="關鍵字")
							.col-wrap.col-12.col-md-2
								button.btn.selector-button(type="button") 送出
						.list
							table.table.table-striped
								thead
									tr
										th.text-center(scope="col" style="width: 20%") 刊登日期
										th(scope="col" style="width: 30%") 職務名稱
										th(scope="col" style="width: 30%") 組織名稱
										th.text-center(scope="col" style="width: 20%") 工作地區
								tbody
									- for ( var i=1 ; i<=15 ; i++)
										tr(onclick="document.location = '12.9.1.html';")
											td.text-center(data-th="刊登日期") 2020 / 06 / 05
											td.text-truncate(data-th="職務名稱") 社工-福安兒服中心
											td.text-truncate(data-th="組織名稱") 靖娟兒童安全文教基金會
											td.text-center(data-th="工作地區") 台北市
						include page.pug
		//- 匯入底部廣告
		include footer_ad.pug
		//- 匯入footer+script
		include footer.pug