doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title 前台-會員-履歷登錄
		//- 匯入連結
		include header.pug
	body#top
		//- 匯入導覽列+gototop
		include nav.pug

		section#font_end_member_resume.member_same.container
			.row
				.content_top.col-12
					h2.content_title.col-12 履歷登錄
					// 左側
					.left.col-12.col-lg-3
						// pc版導覽列
						ul.pc_nav
							li
								i.fa.fa-caret-right
								a(href="10.1.3.1.html") 修改基本資料
							li
								i.fa.fa-caret-right
								a(href="10.1.3.2.html") 履歷登錄
							li
								i.fa.fa-caret-right
								a(href="10.1.3.3.html") 修改密碼
							li
								i.fa.fa-caret-right
								a(href="10.1.html") 登出
						// 手機版導覽列
						select.selectpicker.phone_nav(onchange="location.href=this.options[this.selectedIndex].value")
							option(value="10.1.3.1.html" selected) 修改基本資料
							option(value="10.1.3.2.html")  履歷登陸
							option(value="10.1.3.3.html")  修改密碼
							option(value="10.1.html")  登出
					// 右側
					.right.col-12.col-lg-9
						form.member_resume
							h4.col-12 基本資料
							.col-12
								.form-group
									label 姓名
									input.form-control(type="text")
							
							.col-12
								.form-group
									label 電話
									input.form-control(type="text")
							.col-12
								.form-group
									label Email
									input.form-control(type="email")
							.col-12
								.form-group
									label 兵役狀況
									.solider
										.form-check
											input.form-check-input(type="radio" name="solider")
											label.form-check-label 役畢
										.form-check
											input.form-check-input(type="radio" name="solider")
											label.form-check-label 未役
										.form-check
											input.form-check-input(type="radio" name="solider")
											label.form-check-label 免役
							.col-12
								.form-group
									label 最高學歷
									select.form-control.selectpicker(data-size="5")
										option 博士
										option 碩士
										option 大學
										option 專科
										option 高中
										option 高職
										option 國中
										option 國小
										option 其他
							.col-12.col-md-6
								.form-group
									label 學歷/科系
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 就學情況
									input.form-control(type="text" placeholder="哪一年必/肆業、就學中")
							h4.col-12 工作經歷1
							.col-12.col-md-6
								.form-group
									label 公司名稱
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 行業別
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 工作職稱
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 工作期間
									input.form-control(type="text")
							h4.col-12 工作經歷2
							.col-12.col-md-6
								.form-group
									label 公司名稱
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 行業別
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 工作職稱
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 工作期間
									input.form-control(type="text")
							h4.col-12 工作經歷3
							.col-12.col-md-6
								.form-group
									label 公司名稱
									input.form-control(type="text")
							.col-12.col-md-6
								.form-group
									label 行業別
									input.form-control(type="text")
							.col-12.col-md-6
